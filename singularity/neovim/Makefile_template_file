SHELL := zsh
.ONESHELL:
.SHELLFLAGS := -eu -o pipefail -c

outputs=target1 target2
all: target1 target2
.PHONY: all clean #  which targets are not represented by files

target1:
	echo "Hello from target1" > $@

target2: target1
	cat $< =(echo "Hello from target2") > $@

clean:
	rm $(outputs)
