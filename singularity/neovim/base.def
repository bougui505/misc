BOOTSTRAP: docker
FROM: debian:sid

%post

# install required packages
apt-get update
apt-get install -y bash zsh wget curl lua-nvim git unzip fzf xz-utils npm texlive
apt-get clean

# Install conda in a directory already in path
cd /opt
wget https://repo.anaconda.com/miniconda/Miniconda3-py39_4.12.0-Linux-x86_64.sh
bash Miniconda3-py39_4.12.0-Linux-x86_64.sh -b -f -p /usr/local
rm Miniconda3-py39_4.12.0-Linux-x86_64.sh
conda update conda
conda install pip
pip install numpy
pip install tqdm
pip install rdkit
pip install scipy
pip install torch
pip install torch-geometric

# install gh (see: https://github.com/cli/cli/blob/trunk/docs/install_linux.md)
curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
&& sudo chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
&& echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | sudo tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
&& sudo apt update \
&& sudo apt install gh -y

# install neovim
cd /opt
wget https://github.com/neovim/neovim/releases/download/stable/nvim-linux64.tar.gz
tar xzvf nvim-linux64.tar.gz
cd /usr/local/bin
ln -s /opt/nvim-linux64/bin/nvim .

# configure neovim
cd /opt
git clone --depth 1 https://github.com/AstroNvim/AstroNvim.git
mkdir -p /etc/xdg
cd /etc/xdg
ln -s /opt/AstroNvim nvim

# install tree-sitter-cli
npm install -g tree-sitter-cli

# cleaning
apt-get purge -y wget unzip
apt-get autoremove -y
apt-get clean

%environment
export XDG_CONFIG_HOME=/etc/xdg
