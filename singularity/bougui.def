BOOTSTRAP: docker
FROM: debian:13

%files
neovim/py_template_file.py /opt
neovim/sh_template_file.sh /opt
neovim/Makefile_template_file /opt
neovim/apptainer_template.def /opt
neovim/vimrc.vim /opt
collada2gltf-2.1.4-h6bb024c_0.tar.bz2 /opt
chimera/chimera-1.18-linux_x86_64.bin /opt

%post
export PIP_CACHE_DIR="/tmp/pip/cache"
mkdir -p "$PIP_CACHE_DIR"

export APT_CACHE_DIR="/tmp/apt/archives"
mkdir -p "$APT_CACHE_DIR"
echo "Dir::Cache::Archives \"$APT_CACHE_DIR\";" > /etc/apt/apt.conf.d/99tmp-cache

################################# APT INSTALL #################################
apt-get update
apt-get install -y cmake
apt-get install -y remind
apt-get install -y python3.13-venv  # required to install formatter in neovim -- AstroNvim
apt-get install -y wget git bzip2 build-essential python3-pip
apt-get install -y bash zsh curl unzip fzf xz-utils npm ripgrep default-jre
apt-get install -y meld trash-cli
apt-get install -y sqlite3 coreutils
apt-get install -y htop
apt-get install -y parallel
apt-get install -y pv
apt-get install -y gawk
apt-get install -y clustalw
apt-get install -y qalc
apt-get install -y gztool
apt-get install -y graphviz
apt-get install -y python3-pudb
apt-get install -y pigz
apt-get install -y ncbi-blast+
apt-get install -y eza task-spooler
apt-get install -y make gcc libz-dev
apt-get install -y python3-openbabel
apt-get install -y libnss3 \
        libatk-bridge2.0-0 \
        libgtk-3-0 \
        libxss1 \
        fonts-liberation \
        ca-certificates \
        chromium \
        libfontconfig1 \
        libgbm1 \
        libglib2.0-0 \
        libxcomposite1 \
        libxdamage1 \
        libxext6 \
        libxfixes3 \
        libxrandr2 \
        libxkbcommon0 \
        libpangocairo-1.0-0 \
        libatk1.0-0 \
        libcairo2 \
        libcups2 \
        libdrm2 \
        libegl1 \
        libgdk-pixbuf-2.0-0 \
        libgstreamer-plugins-base1.0-0 \
        libgstreamer1.0-0 \
        libharfbuzz0b \
        libjpeg62-turbo \
        libnotify4 \
        libnspr4 \
        libopengl0 \
        libwayland-client0 \
        libwayland-egl1 \
        libwayland-cursor0 \
        libxshmfence1 \
        xdg-utils
apt-get install -y python3-libtmux  # for: https://github.com/ofirgall/tmux-window-name?tab=readme-ov-file#automatic-rename-after-launching-neovim
apt-get install -y python3-open3d libeigen3-dev
###############################################################################

python3 -m pip config set global.break-system-packages true  # See: https://stackoverflow.com/a/75722775/1679629

################################# Node.js for nvim ####################################
# See: https://github.com/nodesource/distributions?tab=readme-ov-file#installation-instructions-deb
cd /opt
curl -fsSL https://deb.nodesource.com/setup_23.x -o nodesource_setup.sh
bash nodesource_setup.sh
apt-get install -y nodejs
node -v
#######################################################################################

################################# MODELLER ##################################
cd /opt
wget https://salilab.org/modeller/10.7/modeller_10.7-1_amd64.deb
env KEY_MODELLER=MODELIRANJE dpkg -i modeller_10.7-1_amd64.deb
rm modeller_10.7-1_amd64.deb
#############################################################################

################################## alphashape ##################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" alphashape
################################################################################

################################# PyVista ###################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" pyvista
#############################################################################

################################# PYMOL ##################################
apt-get --no-install-recommends install -y catch2 libfreetype6-dev libglew-dev libglm-dev libmsgpack-cxx-dev libnetcdf-dev libpng-dev libxml2-dev python-is-python3 python3-biopython python3-dev python3-distutils-extra python3-numpy python3-pil python3-pytest libglut-dev python3-pmw python3-pyqt5.qtopengl python3-mrcfile
cd /opt
git clone https://github.com/schrodinger/pymol-open-source.git
cd pymol-open-source
# wget -nv https://anaconda.org/schrodinger/collada2gltf/2.1.4/download/linux-64/collada2gltf-2.1.4-h6bb024c_0.tar.bz2
mv /opt/collada2gltf-2.1.4-h6bb024c_0.tar.bz2 .
tar xf collada2gltf-*.tar.bz2 -C / bin/collada2gltf
git clone --depth 1 https://github.com/schrodinger/pymol-testing.git
git clone --depth 1 https://github.com/rcsb/mmtf-cpp.git
cp -R mmtf-cpp/include/mmtf* include/

python3 setup.py --glut True build install
##########################################################################

################################# Typer ###################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" typer "click<8.2.0"  # see: https://github.com/modelcontextprotocol/python-sdk/issues/688#issuecomment-2871923731
###########################################################################

################################# TMTOOLS #################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" tmtools
###########################################################################

################################# IPYTHON #################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" ipython
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" jupyterlab
###########################################################################

############################## deadcode ###################################
# See: https://github.com/albertas/deadcode
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" deadcode
###########################################################################

############################### pydeps ####################################
# See: https://github.com/thebjorn/pydeps
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" pydeps
###########################################################################

################################ MISC REPO ###############################
cd /opt
git clone https://github.com/bougui505/misc.git
cd /usr/local/lib/python3.13/dist-packages
ln -s /opt/misc/python misc
cd /usr/local/bin && ln -s /opt/misc/python/Grid3/pdb_to_density.py density
cd /usr/local/bin && ln -s /opt/misc/python/pymol/symmetrize.py symmetrize
cd /usr/local/bin && ln -s /opt/misc/python/pymol/distmol.py distmol
cd /usr/local/bin && ln -s /opt/misc/python/pymol/liginfo.py liginfo
cd /usr/local/bin && ln -s /opt/misc/python/rec.py rec
cd /usr/local/bin && ln -s /opt/misc/python/TMalign/tmalign.py tmalign
cd /usr/local/bin && ln -s /opt/misc/python/pytorch/MDS.py mds
cd /usr/local/bin && ln -s /opt/misc/python/linkage.py linkage
cd /usr/local/bin && ln -s /opt/misc/shell/recawk.sh recawk
cd /usr/local/bin && ln -s /opt/misc/python/pycat.py pycat
cd /usr/local/bin && ln -s /opt/misc/python/project.py project
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" termcolor
##########################################################################

################################ MATPLOT - PLOT ################################
cd /opt
git clone https://github.com/bougui505/matplot.git
cd /usr/bin
ln -s /opt/matplot/matplot.py plot
ln -s /opt/matplot/matplot2.py plot2
ln -s /opt/matplot/matplot3.py plot3
cd /usr/local/lib/python3.13/dist-packages
ln -s /opt/matplot/*.py .
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" scikit-learn scipy numexpr numpy pillow matplotlib datashader bokeh holoviews scikit-image colorcet umap-learn pandas
################################################################################

################################ plotext ################################
# https://github.com/piccolomo/plotext
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" "plotext[completion]"
#########################################################################

################################# PDBSUMUP #################################
cd /opt
git clone https://github.com/bougui505/pdbsumup.git
cd /usr/bin/
ln -s /opt/pdbsumup/pdbsumup.py pdbsumup
############################################################################

################################# NEOVIM ##################################
# install gh (see: https://github.com/cli/cli/blob/trunk/docs/install_linux.md) required for neovim
curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
&& sudo chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
&& echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | sudo tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
&& sudo apt update \
&& sudo apt install gh -y

# install neovim
cd /opt
wget https://github.com/neovim/neovim/releases/latest/download/nvim-linux-x86_64.tar.gz
tar xzvf nvim-linux-x86_64.tar.gz
cd /usr/local/bin
ln -s /opt/nvim-linux-x86_64/bin/nvim .

# configure neovim
# spell languages
cd /opt/nvim-linux-x86_64/share/nvim/runtime/spell && wget https://www.mirrorservice.org/pub/vim/runtime/spell/fr.utf-8.spl

cd /opt
curl -fsSL https://ollama.com/install.sh | sh
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" pygls ollama
###########################################################################

################################# PYTORCH #################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" torch torchvision torchaudio torchinfo torchviz
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" captum
###########################################################################

################################# PYTORCH-GEOMETRIC #################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" torch_geometric
################################# PYTORCH-GEOMETRIC #################################

################################# RDKIT #################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" rdkit
#########################################################################

################################# SELFIES #################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" selfies
###########################################################################

################################# Python Remind library #################################
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" gcalcli
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" remind
#########################################################################################

################################# CHIMERA #################################
cd /opt
chmod u+x chimera-1.18-linux_x86_64.bin
./chimera-1.18-linux_x86_64.bin << EOF
/opt/chimera
EOF
cd /usr/bin/
ln -s /opt/chimera/bin/chimera .
###########################################################################

######## ProtTrans ########
cd /opt
export HF_HOME="/opt/cache/huggingface/datasets"
pip3 install --break-system-packages --cache-dir "$PIP_CACHE_DIR" transformers sentencepiece protobuf
python3 -c "from transformers import T5Tokenizer, T5EncoderModel;tokenizer = T5Tokenizer.from_pretrained('Rostlab/prot_t5_xl_half_uniref50-enc', do_lower_case=False);model = T5EncoderModel.from_pretrained('Rostlab/prot_t5_xl_half_uniref50-enc')"
############################

########### SQUASHFS ##########
cd /opt
wget https://github.com/plougher/squashfs-tools/archive/refs/tags/4.6.1.tar.gz
tar -xzvf 4.6.1.tar.gz
cd squashfs-tools-4.6.1
cd squashfs-tools
make
make install
###############################

################################# spaCy #################################
# The global pip config is set at the top of %post
# The pip cache directory is created at the top of %post
pip3 --cache-dir="$PIP_CACHE_DIR" install spacy
python3 -m spacy download en_core_web_sm
python3 -m spacy download fr_core_news_sm
##########################################################################

################################# Group SELFIES #################################
cd /opt
git clone https://github.com/aspuru-guzik-group/group-selfies
cd group-selfies
pip install .
#################################################################################

################################# AIDER INSTALL #################################
export PATH=/root/.local/bin:$PATH
python3 -m pip config set global.break-system-packages true
pip --cache-dir="$PIP_CACHE_DIR" install aider-install
aider-install
/root/.local/share/uv/tools/aider-chat/bin/python -m pip install --upgrade --upgrade-strategy only-if-needed aider-chat[playwright]
/root/.local/share/uv/tools/aider-chat/bin/python -m playwright install
cd /root/.local/bin
for f in /root/.local/share/uv/tools/aider-chat/bin/*; do
    filename=$(basename "$f")
    target="/root/.local/bin/$filename"
    if [ -f "$f" ] && [ ! -e "$target" ]; then
        ln -s "$f" "$target"
    fi
done
###############################################################################

################################# ATOMSURF #################################
pip install --break-system-packages --cache-dir "$PIP_CACHE_DIR" torch-sparse torch-scatter
pip install pyg-lib -f https://data.pyg.org/whl/torch-2.8.0+cu128.html
cd /opt
git clone https://github.com/Vincentx15/atomsurf.git
cd atomsurf
# Remove open3d from requirements.txt as it is installed via apt-get
sed -i '/open3d/d' requirements.txt
# Pandas is already installed
sed -i '/pandas==1.1.3/d' requirements.txt
sed -i '/biopython==1.81/d' requirements.txt
sed 's/^deltaconv==1.0.2/deltaconv/' requirements.txt
# Install diffusion-net-plus and atomsurf requirements using python3 (which is Python 3.12 in Trixie)
python3 -m pip install --break-system-packages --cache-dir "$PIP_CACHE_DIR" git+https://github.com/pvnieo/diffusion-net-plus.git
python3 -m pip install --break-system-packages --cache-dir "$PIP_CACHE_DIR" -r requirements.txt
cd /usr/local/lib/python3.13/dist-packages
ln -s /opt/atomsurf/atomsurf .
############################################################################

# rm -rf "$PIP_CACHE_DIR"
# rm -rf "$APT_CACHE_DIR"

%environment
export PATH=$PATH:/root/.local/bin:/root/.local/share/uv/tools/aider-chat/bin
export PLAYWRIGHT_BROWSERS_PATH=/root/.cache/ms-playwright
export PYTHONNOUSERSITE=1  # Do not use local python file outside the container
export PYTHONPATH=
export MATPLOTLIBRC=$HOME/.config/matplotlib/matplotlibrc
# for ProtTrans
export HF_HOME="/opt/cache/huggingface/datasets"
